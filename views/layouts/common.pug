html 
  head 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js", integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa", crossorigin="anonymous") 
    link(rel="stylesheet", href="/style/common.css") 
    block css-external
    block js-external
  body 
    nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
      div(class="container") 
        a(class="navbar-brand", href="/") 
          img(src="/image/logo.jpg", alt="", class="navbar__logo")
        div(class="collapse navbar-collapse") 
          ul(class="navbar-nav me-auto mb-2 mb-lg-0")
            li.nav-item
              a(class="nav-link navbar-left-title" id="navbar-home", href="/") Home
            li.nav-item
              a(class="nav-link navbar-left-title" id="navbar-users", href="/users") Users
            li.nav-item
              a(class="nav-link navbar-left-title" id="navbar-products" href="/products") Products
            li.nav-item
              a(class="nav-link navbar-left-title" id="navbar-cart" href="/cart") Cart (#{cartCounter})
            li.nav-item 
              a(class="nav-link navbar-left-title" id="navbar-transfer" href="/transfer/create") Transfer
          if (!userInfo)
            div(class="d-flex")
              a(class="btn btn-outline-light me-2" href="/auth/login") Login
              a(class="btn btn-outline-light" href="/auth/signup") Signup
          else 
            ul(class="navbar-nav mb-lg-0")
              li(class="nav-item dropdown user-container")
                a(class="nav-link dropdown-toggle user-display-wrap" href="#" role="button" data-bs-toggle="dropdown" aria-expand="false") 
                  div(class="user-display-logo" style="background-image: url(" + userInfo.avatar + ")")
                  span(class="user-display-text") Hello,&nbsp 
                    b #{userInfo.name}
                ul(class="dropdown-menu dropdown-menu-dark")
                  li
                    a(class="dropdown-item" href="#") Setting & privacy
                  li
                    a(class="dropdown-item" href="#") Help & support
                  li
                    a(class="dropdown-item" href="#") Display & accessibility
                  li
                    hr(class="dropdown-divider")
                  li
                    a(class="dropdown-item" href="/logout") Logout
                
              
    div(class="container")
      block content 

    script(src="/js/common.js")
    block javascripts