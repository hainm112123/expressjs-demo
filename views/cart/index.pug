extends ../layouts/common.pug

block css-external 
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css")
  link(rel="stylesheet", href="/style/cart/index.css")

block content 
  .content-container 
    .container 
      table.table 
        thead 
          tr 
            th(scope="col") 
            th(scope="col") 
            th(scope="col") Products
            th(scope="col") Amount
        tbody 
          each val, key in cartProducts 
            tr 
              td 
                .cart-product__remove-btn-container
                  a.cart-product__remove-btn.link-danger(href='/cart/remove/' + val.info.id)
                    i.fa-solid.fa-xmark  
              td 
                .cart-product__img(style="background-image: url(" + val.info.imgURL + ")")              
              td 
                p.cart-product__name.fw-semibold #{val.info.name}
              td 
                .cart-product__amount-container 
                  a.cart-product__amount-item.dec-btn(href="/cart/dec/" + val.info.id) -
                  a.cart-product__amount-item.amount(href="") #{val.amount}
                  a.cart-product__amount-item.inc-btn(href="/cart/inc/" + val.info.id) + 